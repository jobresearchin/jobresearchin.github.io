---
pagination:
  data: translations
  size: 1
  alias: lang
permalink: "{% if lang.key == 'ja' %}/{% else %}/{{ lang.key }}/{% endif %}index.html"
---

<!DOCTYPE html>
<html lang="{{ lang.key }}">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ lang.meta.title }}</title>
  <meta name="description" content="{{ lang.meta.description }}" />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet" media="print" onload="this.media='all'" />
  <link rel="stylesheet" href="/style.css" />
  <link rel="alternate" hreflang="ja" href="https://corp.jobresearchin.com/" />
  <link rel="alternate" hreflang="en" href="https://corp.jobresearchin.com/en/" />
  <meta property="og:type" content="website" />
  <meta property="og:title" content="{{ lang.meta.title }}" />
  <meta property="og:description" content="{{ lang.meta.description }}" />
  <meta property="og:image" content="https://corp.jobresearchin.com/static/og-image.jpg" />
  <meta property="og:url" content="https://corp.jobresearchin.com/{% if lang.key == 'ja' %}{% else %}en/{% endif %}" />
  <meta property="og:site_name" content="{{ lang.meta.siteName }}" />
  <meta name="twitter:card" content="summary_large_image" />

  <script async src="https://www.googletagmanager.com/gtag/js?id=G-X754F6MGCM"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-X754F6MGCM');
  </script>
</head>

<body>
  <div class="mobile-sidebar" id="mobile-sidebar">
    <button class="menu-close-btn" id="menu-close-btn">&times;</button>
    <nav>
      <ul>
        <li><a href="#service-overview" class="menu-link">{{ lang.header.navOverview }}</a></li>
        <li><a href="#researchers" class="menu-link">{{ lang.header.navResearchers }}</a></li>
        <li><a href="#participants" class="menu-link">{{ lang.header.navParticipants }}</a></li>
        <li><a href="#team" class="menu-link">{{ lang.header.navTeam }}</a></li>
        <li><a href="#company-profile" class="menu-link">{{ lang.header.navCompany }}</a></li>
        <li><a href="{% if lang.key == 'ja' %}/news/{% else %}/{{ lang.key }}/news/{% endif %}" class="menu-link">{{ lang.news.title }}</a></li>
      </ul>
    </nav>
  </div>
  <div class="sidebar-overlay" id="sidebar-overlay"></div>

  <div class="site-wrapper">
    <header>
      <div class="nav-container">
        <a href="/" class="brand-logo">
          {% image "static/logo.png", "Researchin Logo", "(max-width: 600px) 150px, 200px" %}
        </a>
        <nav class="desktop-nav">
          <a href="#service-overview">{{ lang.header.navOverview }}</a>
          <a href="#researchers">{{ lang.header.navResearchers }}</a>
          <a href="#participants">{{ lang.header.navParticipants }}</a>
          <a href="#team">{{ lang.header.navTeam }}</a>
          <a href="#company-profile">{{ lang.header.navCompany }}</a>
          <a href="{% if lang.key == 'ja' %}/news/{% else %}/{{ lang.key }}/news/{% endif %}">{{ lang.news.title }}</a>
        </nav>
        <div class="header-right">
          <div class="lang-switcher desktop-lang-switcher">
            <a href="/" {% if lang.key=='ja' %}class="active"{% endif %}>JP</a>
            <span>/</span>
            <a href="/en/" {% if lang.key=='en' %}class="active"{% endif %}>EN</a>
          </div>
          <a href="{{ lang.header.navContactLink }}" class="btn contact-btn" target="_blank" rel="noopener noreferrer">{{ lang.header.navContact }}</a>
          <button class="hamburger-menu" id="hamburger-menu" aria-label="メニューを開く"><span></span><span></span></button>
        </div>
      </div>
    </header>

    <main>
      <section class="hero" id="hero">
        <div class="hero-main-content">
            <div class="container">
                <div class="hero-layout">
                    <div class="hero-content fade-in-up">
                        <h1>{{ lang.hero.title }}</h1>
                        <p class="delay-1">{{ lang.hero.subtitle }}</p>
                    </div>
                    <div class="hero-buttons fade-in-up delay-2">
                        <a href="{{ lang.hero.participantBtnLink }}" class="btn btn-primary" target="_blank" rel="noopener noreferrer">{{ lang.hero.participantBtnText }}</a>
                        <a href="{{ lang.hero.researcherBtnLink }}" class="btn btn-primary">{{ lang.hero.researcherBtnText }}</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="hero-businesses">
            <div class="container">
                <h3 class="hero-businesses-title fade-in-up">{{ lang.hero.businessesTitle }}</h3>
                <div class="services-grid">
                    <div class="service-card">
                        <h3>{{ lang.businesses.item1.title }}</h3>
                        <p>{{ lang.businesses.item1.desc }}</p>
                    </div>
                    <div class="service-card">
                        <h3>{{ lang.businesses.item2.title }}</h3>
                        <p>{{ lang.businesses.item2.desc }}</p>
                    </div>
                    <div class="service-card">
                        <h3>{{ lang.businesses.item3.title }}</h3>
                        <p>{{ lang.businesses.item3.desc }}</p>
                    </div>
                </div>
                <p class="hero-businesses-inquiry fade-in-up">
                    {{ lang.hero.businessesInquiry | safe }}
                </p>
            </div>
        </div>
      </section>

      <section id="service-overview" class="section bg-light">
        <div class="container">
          <div class="section-header fade-in-up">
            <h2>{{ lang.overview.title }}</h2>
            <p>{{ lang.overview.subtitle }}</p>
          </div>
          <div class="services-grid fade-in-up delay-1">
    <div class="service-card">
     
      {% image "images/icon-researcher.jpg",  "60px", width="60", height="60" %}
      <h3>{{ lang.overview.feature1.title }}</h3>
      <p>{{ lang.overview.feature1.desc }}</p>
    </div>
    <div class="service-card">
      
      {% image "images/icon-participant.jpg",  "60px", width="60", height="60" %}
      <h3>{{ lang.overview.feature2.title }}</h3>
      <p>{{ lang.overview.feature2.desc }}</p>
    </div>
    <div class="service-card">
      
      {% image "images/icon-transparency.jpg",  "60px", width="60", height="60" %}
      <h3>{{ lang.overview.feature3.title }}</h3>
      <p>{{ lang.overview.feature3.desc }}</p>
    </div>
</div>
        </div>
      </section>

      <section id="researchers" class="section">
        <div class="container">
          <div class="section-header fade-in-up">
            <h2>{{ lang.researchers.title }}</h2>
            <p>{{ lang.researchers.subtitle }}</p>
          </div>
          <div class="feature-layout">
            <div class="feature-content fade-in-up">
              <ul>
                <li>{{ lang.researchers.point1 }}</li>
                <li>{{ lang.researchers.point2 }}</li>
                <li>{{ lang.researchers.point3 }}</li>
              </ul>
              <a href="{{ lang.researchers.btnLink }}" class="btn btn-primary">{{ lang.researchers.btnText }}</a>
            </div>
            
          </div>
        </div>
      </section>

      <section id="participants" class="section bg-light">
        <div class="container">
          <div class="section-header fade-in-up">
            <h2>{{ lang.participants.title }}</h2>
            <p>{{ lang.participants.subtitle }}</p>
          </div>
          <div class="feature-layout reverse">
            <div class="feature-content fade-in-up">
              <ul>
                <li>{{ lang.participants.point1 }}</li>
                <li>{{ lang.participants.point2 }}</li>
                <li>{{ lang.participants.point3 }}</li>
              </ul>
              <a href="{{ lang.participants.btnLink }}" class="btn btn-primary">{{ lang.participants.btnText }}</a>
            </div>
            
          </div>
        </div>
      </section>

      <section id="upcoming-features" class="section">
        <div class="container">
          <div class="section-header fade-in-up">
            <h2>{{ lang.features.title }}</h2>
            <p>{{ lang.features.subtitle }}</p>
          </div>
          <div class="services-grid fade-in-up delay-1">
             <div class="service-card">
              <h3>{{ lang.features.feature1.title }}</h3>
              <p>{{ lang.features.feature1.desc }}</p>
            </div>
            <div class="service-card">
              <h3>{{ lang.features.feature2.title }}</h3>
              <p>{{ lang.features.feature2.desc }}</p>
            </div>
            <div class="service-card">
              <h3>{{ lang.features.feature3.title }}</h3>
              <p>{{ lang.features.feature3.desc }}</p>
            </div>
            <div class="service-card">
              <h3>{{ lang.features.feature4.title }}</h3>
              <p>{{ lang.features.feature4.desc }}</p>
            </div>
          </div>
        </div>
      </section>

      <section id="team" class="section bg-light">
  <div class="container narrow">
    <div class="section-header fade-in-up">
      <h2>{{ lang.team.title }}</h2>
    </div>
    <div class="team-list fade-in-up delay-1">
      {% for member in lang.team.members %}
      <div class="team-list-item">
        <div class="team-item-info">
          <div class="team-item-name">{{ member.name }}</div>
          <div class="team-item-title">{{ member.title }}</div>
          {% if member.affiliation %}
            <div class="team-item-affiliation">{{ member.affiliation }}</div>
          {% endif %}
        </div>
        <div class="team-item-socials">
  {% if member.socials.linkedin %}
    <a href="{{ member.socials.linkedin }}" target="_blank" rel="noopener noreferrer" aria-label="{{ member.name }}のLinkedIn">
     
      {% image "images/icon-linkedin.svg", "LinkedIn", null, width="24", height="24" %}
    </a>
  {% endif %}
  {% if member.socials.github %}
    <a href="{{ member.socials.github }}" target="_blank" rel="noopener noreferrer" aria-label="{{ member.name }}のGitHub">
    
      {% image "images/icon-github.svg", "GitHub", null, width="24", height="24" %}
    </a>
  {% endif %}
</div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

      <section id="company-profile" class="section">
        <div class="container narrow">
          <div class="section-header fade-in-up">
            <h2>{{ lang.companyProfile.title }}</h2>
          </div>
          <table class="company-table fade-in-up delay-1">
            <tr><th>{{ lang.companyProfile.nameLabel }}</th><td>{{ lang.companyProfile.name }}</td></tr>
            <tr><th>{{ lang.companyProfile.foundedLabel }}</th><td>{{ lang.companyProfile.founded }}</td></tr>
            <tr><th>{{ lang.companyProfile.ceoLabel }}</th><td>{{ lang.companyProfile.ceo }}</td></tr>
            <tr><th>{{ lang.companyProfile.addressLabel }}</th><td>{{ lang.companyProfile.address }}</td></tr>
          </table>
        </div>
      </section>
    </main>
    
    <footer>
      <div class="container">
        <div class="footer-contact">
          <p>{{ lang.footer.contactPrefix }} <a href="mailto:{{ lang.footer.contactEmail }}">{{ lang.footer.contactEmail }}</a></p>
        </div>
        <p class="copyright">&copy; <span id="currentYear"></span> {{ lang.meta.siteName }} Inc. All rights reserved.</p>
      </div>
    </footer>
  </div>
  <script>
    document.getElementById("currentYear").textContent = new Date().getFullYear();
    const mobileSidebar = document.getElementById("mobile-sidebar");
    const hamburgerBtn = document.getElementById("hamburger-menu");
    const closeMenuBtn = document.getElementById("menu-close-btn");
    const overlay = document.getElementById("sidebar-overlay");
    const menuLinks = document.querySelectorAll(".menu-link");
    const openMenu = () => { mobileSidebar.classList.add("is-open"); overlay.classList.add("is-open"); };
    const closeMenu = () => { mobileSidebar.classList.remove("is-open"); overlay.classList.remove("is-open"); };
    hamburgerBtn.addEventListener("click", openMenu);
    closeMenuBtn.addEventListener("click", closeMenu);
    overlay.addEventListener("click", closeMenu);
    menuLinks.forEach((link) => link.addEventListener("click", closeMenu));
    const animatedElements = document.querySelectorAll(".fade-in-up");
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add("is-visible");
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });
    animatedElements.forEach((el) => observer.observe(el));
  </script>
</body>
</html>